<UserControl x:Class="VSSpotify.SpotifyControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VSSpotify"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StatusBar HorizontalAlignment="Right" VerticalAlignment="Stretch">
            <Button x:Name="SignInButton" Click="SignInButton_Click">Sign In</Button>
            <Button x:Name="Previous" Click="Previous_Click">Previous</Button>
            <Button x:Name="PlayButton" Click="PlayButton_Click">Play</Button>
            <Button x:Name="NextButton" Click="NextButton_Click">Next</Button>
            <Button x:Name="SongTitleButton" Click="SongTitleButton_Click">Song Title</Button>
            <Button x:Name="MuteButton" Click="MuteButton_Click">Mute</Button>
        </StatusBar>
    </Grid>
</UserControl>
